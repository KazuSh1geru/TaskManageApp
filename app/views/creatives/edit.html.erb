<% @document_title = "制作物 編集画面"%>

<%= form_with model: [@project, @creative] do |f| %>
    <dl>
        <dt>制作物</dt>
        <dd><%= f.text_field :name, value: @creative.name %></dd>
        <dt>締切</dt>
        <dd><%= f.date_field :deadline, value: @creative.deadline %></dd>

    </dl>
    <%= f.submit "更新する" %>
    <%= link_to "キャンセル", project_creatives_path(@project) %>
<% end %>
