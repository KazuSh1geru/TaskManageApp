<% @document_title = "TOP PAGE" %>
<br>

<h3><%= @user.name %>さん、ようこそ</h3>

<%# 検索画面作る：selectで分岐させる %>
<p>
    <%= form_with url: project_tasks_path(params[:project_id]), method: :get do |f| %>
        一覧したいタスク
        <%= f.select :sort, {'未着手': 0, '実施中': 1, '完了': 2}, selected: @sort%>
        <%= f.submit "Search", name: nil%>
    <% end %>
</p>
<%# Doneの消去画面作る %>
<%#= button_to "完了タスク削除", done_path, method: :delete, data: { confirm: '削除しますか?' }%>

<br>
<%#= form_with model: @new_task do |f| %>
    <%#= f.label :name %>
    <%#= f.text_field :name %>
    <%#= f.submit "新規タスク"%>
<%# end %>
<br>


<%= will_paginate @tasks, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>
<table>
    <tr>
        <th>ID</th>
        <th>ステータス</th>
        <th>タスク</th>
        <th>作成日時</th>
        <th>編集</th>
        <th>削除</th>
    </tr>

    <% @tasks.each do |t| %>
    <tr>
        <td><%= t.id %></td>
        <td>
            <%= form_with url: change_path(t), method: :patch do |form| %>
                <%= form.select :change, {'未着手': 0, '実施中': 1, '完了': 2} , selected: t.status%>
                <%#= form.hidden_field :task_id, value: t.id %>
                <%= form.submit "変更"%>
            <% end %>
        </td>
        
        
        <td><%= t.name %></td>
        <td><%= l t.created_at %></td>
        <td><%= link_to "編集", edit_task_path(t) %></td>
        <td><%= link_to "削除", task_path(t), method: :delete, data: { confirm: '削除しますか?' }%></td>
    </tr>
    <% end %>
</table>
<%= will_paginate @tasks, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>